# Scrapple Backend Environment Variables Template
# Copy this file to .env and fill in your actual values (DO NOT commit .env to version control)

# Gemini API Configuration
# Get your API key from: https://aistudio.google.com/app/apikeys
GEMINI_API_KEY=your_gemini_api_key_here

# ElevenLabs API Configuration
# Get your API key from: https://www.elevenlabs.io/app/voice-lab
ELEVEN_API_KEY=your_elevenlabs_api_key_here

# Flask Secret Key for session management
# Generate a secure key: python -c "import secrets; print(secrets.token_hex(16))"
SECRET_KEY=your_flask_secret_key_here

# Flask Environment Mode
# Set to 'development' for debug mode (auto-reload, detailed errors)
# Set to 'production' for production mode (no debug, optimized)
FLASK_ENV=development
